{{ register_asset_bundle('app/assets/MainAsset') }}

{{ use('yii/widgets/LinkPager') }}

{% include('@app/views/base/menu.twig') %}

{% include('@app/views/base/breadcrumbs.twig') %}

{% if productsList %}
    <ol>
    {% for productsModel in productsList %}
        <li>
            <a href="{{ url.to({0:'products-detail/index', 'categories':productsModel.categories.seocode, 'subcategory':productsModel.subcategory.seocode, 'id':productsModel.id}) }}">{{ productsModel.name }}</a>
            <br>{{ app.formatter.asDate(productsModel.date) }}
        </li>
    {% endfor %}
    </ol>
{% endif %}

{{ link_pager_widget({'pagination':paginationObject}) }}
