
{{ register_asset_bundle('app/assets/MainAsset') }}

{{ use('yii/widgets/ActiveForm') }}

{% include '@app/views/parts/user-buttons.twig' %}

{% include '@app/views/parts/admin-menu.twig' %}

<p>Здесь вы можете управлять комментариями</p>

<p><strong>Обновить комментарий</strong></p>

<p>
    Товар: <a href="{{ url.to({0:'product-detail/index', 'categories':commentsModel.products.categories, 'subcategory':commentsModel.products.subcategory, 'id':commentsModel.products.id}) }}">{{ commentsModel.products.name }}</a><br>
    Email: {{ commentsModel.emails.email }}
</p>

{% set form=active_form_begin({'id':'update-comments-form', 'action':url.to({0:'admin/update-comments', 'id':commentsModel.id}), 'method':'POST'}) %}
    {{ form.field(commentsModel, 'id').hiddenInput().label(false) | raw }}
    {{ form.field(commentsModel, 'id_emails').hiddenInput().label(false) | raw }}
    {{ form.field(commentsModel, 'id_products').hiddenInput().label(false) | raw }}
    {{ form.field(commentsModel, 'text').textarea({'rows':5, 'cols':30}) | raw }}
    {{ form.field(commentsModel, 'name') | raw }}
    {{ form.field(commentsModel, 'date').input('date', {'value':app.formatter.asDate(commentsModel.date, 'yyyy-MM-dd')}) | raw }}
    {{ form.field(commentsModel, 'active').checkbox() | raw }}
    <input type="submit" value="Обновить">
{{ active_form_end() }}





