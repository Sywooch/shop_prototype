{{ use('yii/widgets/ActiveForm') }}

<p>Здесь вы можете управлять товарными категориями</p>

{% if categoriesList %}
    <p><strong>Текущие категории</strong></p>
    <ul>
        {% for categoriesModel in categoriesList %}
            <li>
                {{ categoriesModel.name }}<br>
                <a href="{{ url.to({0:'admin/update-categories', 'id':categoriesModel.id}) }}">Обновить категорию</a><br>
                <a href="{{ url.to({0:'admin/delete-categories', 'id':categoriesModel.id}) }}">Удалить категорию</a>
            </li>
        {% endfor %}
    </ul>
{% endif %}

