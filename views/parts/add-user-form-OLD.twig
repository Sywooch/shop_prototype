
{{ use('yii/widgets/ActiveForm') }}

{% set form = active_form_begin({'id': 'join-form', 'action': url.to({0:'users/add-user'}), method: 'POST'}) %}
    {{ form.field(model, 'login') | raw }}
    {{ form.field(model, 'password').passwordInput() | raw }}
    {{ form.field(model, 'name') | raw }}
    {{ form.field(model, 'surname') | raw }}
    {{ form.field(model, 'rulesFromForm[]').dropDownList(array.map(model.allRules, 'id', 'rule'), {'multiple':'multiple'}) |raw }}
    <input type="submit" value="Join" />
{{ active_form_end() }}
