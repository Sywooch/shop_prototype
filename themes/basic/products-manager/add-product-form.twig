{{ use('yii/widgets/ActiveForm') }}

{% set form=active_form_begin({'id':'add-product-form', 'action':url.to({0:'/products-manager/add-one'}), 'method':'POST', 'options':{'enctype':'multipart/form-data'}}) %}
    {{ form.field(productsModel, 'code', {'enableAjaxValidation':true}) | raw }}
    {{ form.field(productsModel, 'name') | raw }}
    {{ form.field(productsModel, 'seocode', {'enableAjaxValidation':true}) | raw }}
    {{ form.field(productsModel, 'short_description').textarea() | raw }}
    {{ form.field(productsModel, 'description').textarea() | raw }}
    {{ form.field(productsModel, 'price', {'enableAjaxValidation':true}).hint(yii.t('base', 'To separate cents use the point or the comma! For example: 2123.87 corresponds to a price of 2123 dollars 87 cents')) | raw }}
    {{ form.field(productsModel, 'images[]').fileInput({'accept':'image/*', 'multiple':true}) | raw }}
    
    {{ form.field(productsModel, 'id_category').dropDownList(categoriesList, {'data-href':url.to({0:'/ajax/get-subcategory'}), 'data-filler':app.params.formFiller}) | raw }}
    {{ form.field(productsModel, 'id_subcategory').dropDownList(subcategoryList) | raw }}
    
    {{ form.field(colorsModel, 'id').checkboxList(colorsList, {'multiple':true}).label('Colors') | raw }}
    {{ form.field(sizesModel, 'id').checkboxList(sizesList, {'multiple':true}).label('Sizes') | raw }}
    {{ form.field(brandsModel, 'id').dropDownList(brandsList).label('Brands') | raw }}
    
    {{ form.field(productsModel, 'total_products', {'enableAjaxValidation':true}) | raw }}
    {{ form.field(productsModel, 'active').checkbox() | raw }}
    <input type="submit" value="{{ yii.t('base', 'Send') }}">
{{ active_form_end() }}
