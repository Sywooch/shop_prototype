
{% if app.user.isGuest %}
    {% set user = yii.t('base', 'Guest') %}
{% else %}
    {% set user = app.user.identity.name %}
{% endif %}

<p>{{ yii.t('base', "Hello, {placeholder}!", {'placeholder':user}) }}</p>

{% if user == yii.t('base', 'Guest') %}
    <p><a href="{{ url.to({0:'/user/login'}) }}">Войти</a></p>
{% endif %}
