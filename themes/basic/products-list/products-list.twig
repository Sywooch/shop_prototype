{% extends '@theme/templates/base-frontend.twig' %}

{% block main %}
    
    {{ register_asset_bundle('app/assets/ProductsListAsset') }}
    
    {{ use('app/widgets/CategoriesBreadcrumbsWidget') }}
    {{ use('app/widgets/ModFiltersWidget') }}
    {{ use('app/widgets/EmptyProductsWidget') }}
    {{ use('app/widgets/ProductsWidget') }}
    {{ use('app/widgets/PaginationWidget') }}
    
    <!--{{ categories_breadcrumbs_widget_widget(categoriesBreadcrumbsWidgetConfig) }}-->
    
    {% if filtersWidgetConfig %}
        {{ mod_filters_widget_widget(filtersWidgetConfig) }}
    {% endif %}
    
    {% if emptyProductsWidgetConfig %}
        {{ empty_products_widget_widget(emptyProductsWidgetConfig) }}
    {% else %}
        {{ products_widget_widget(productsWidgetConfig) }}
        
        {{ pagination_widget_widget(paginationWidgetConfig) }}
    {% endif %}
    
{% endblock %}
