{% if filtersModel %}

    {{ use('yii/widgets/ActiveForm') }}
    
    {% set form = active_form_begin({'id':'filters-form', 'action':'', 'method':'POST'}) %}
        {{ form.field(filtersModel, 'sortingField').dropDownList({'date':yii.t('base', 'Sorting by date'), 'price':yii.t('base', 'Sorting by price')}) | raw }}
        {{ form.field(filtersModel, 'sortingType').dropDownList({'SORT_DESC':yii.t('base', 'Sort descending'), 'SORT_ASC':yii.t('base', 'Sort ascending')}) | raw }}
        
        {{ form.field(filtersModel, 'colors').checkboxList(array.map(colorsList, 'id', 'color')) | raw }}
        
        <input type="submit" value="{{ yii.t('base', 'Apply') }}">
    {{ active_form_end() }}

{% endif %}
