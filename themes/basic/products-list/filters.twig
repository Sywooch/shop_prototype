{% if app.filters %}

    {{ use('yii/widgets/ActiveForm') }}
    
    {% set form = active_form_begin({'id':'filters-form', 'action':url.to({0:'filters/set'}), 'method':'POST'}) %}
        {% if sortingFieldList %}
            {{ form.field(app.filters, 'sortingField').dropDownList(sortingFieldList) | raw }}
        {% endif %}
        {% if sortingTypeList %}
            {{ form.field(app.filters, 'sortingType').dropDownList(sortingTypeList) | raw }}
        {% endif %}
        
        {% if colorsList %}
            {{ form.field(app.filters, 'colors').checkboxList(colorsList) | raw }}
        {% endif %}
        {% if sizesList %}
            {{ form.field(app.filters, 'sizes').checkboxList(sizesList) | raw }}
        {% endif %}
        {% if brandsList %}
            {{ form.field(app.filters, 'brands').checkboxList(brandsList) | raw }}
        {% endif %}
        
        <input type="submit" value="{{ yii.t('base', 'Apply') }}">
    {{ active_form_end() }}
    
    {% set form = active_form_begin({'id':'filters-clean', 'action':url.to({0:'filters/unset'}), 'method':'POST'}) %}
        <input type="submit" value="{{ yii.t('base', 'Clean') }}">
    {{ active_form_end() }}

{% endif %}
