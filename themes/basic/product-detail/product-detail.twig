{{ register_asset_bundle('app/assets/MainAsset') }}

{{ use('app/widgets/BreadcrumbsWidget') }}

{% include('@theme/base/user-info.twig') %}

{% include '@theme/base/search.twig' %}

{% include('@theme/base/menu.twig') %}

{% if productsModel %}
    {{ breadcrumbs_widget_widget({'productsModel':productsModel}) }}
    
    <h1>{{ productsModel.name }}</h1>
    <p>
        {{ app.formatter.asDate(productsModel.date) }}
    </p>
    <p>
        {{ productsModel.description }}
    </p>
    <p><strong>{{ yii.t('base', 'Colors:') }}</strong></p>
    <ul>
        {% for color in array.getColumn(productsModel.colors, 'color') %}
            <li>{{ color }}</li>
        {% endfor %}
    </ul>
{% endif %}
