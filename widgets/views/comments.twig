{{ use('yii/widgets/ActiveForm') }}

<p><strong>{{ header }}</strong></p>

{% if comments %}
    <ul>
        {% for comment in comments %}
            <li>
                {{ comment.name | raw }}</br>
                {{ comment.date | raw }}</br>
                {{ comment.text | raw }}</br>
            </li>
        {% endfor %}
    </ul>
{% endif %}

{% set form=active_form_begin({'id':formId, 'enableAjaxValidation':ajaxValidation, 'action':formAction, 'method':'POST'}) %}
    {{ form.field(modelForm, 'name') | raw }}
    {{ form.field(modelForm, 'email') | raw }}
    {{ form.field(modelForm, 'text').textarea() | raw }}
    {{ form.field(modelForm, 'id_product').hiddenInput().label(false) | raw }}
    <input type="submit" value="{{ button }}">
{{ active_form_end() }}
