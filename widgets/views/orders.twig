{{ use('yii/widgets/ActiveForm') }}
{% import '@app/widgets/views/macro/hidden-id-form.twig' as form %}

<p><strong>{{ header }}</strong></p>

{% if purchases %}
    <ol class="{{ listClass }}">
        {% for purchase in purchases %}
            <li>
                <div class="admin-order-previous-data">
                    <a href="{{ purchase.link }}">{{ purchase.linkText }}</a>
                    <br>{{ purchase.short_description }}
                    <br>{{ purchase.image | raw }}
                    <br>{{ idHeader }}: {{ purchase.id }}
                    <br>{{ dateHeader }}: {{ purchase.date }}
                    <br>{{ colorHeader }}: {{ purchase.color }}
                    <br>{{ sizeHeader }}: {{ purchase.size }}
                    <br>{{ quantityHeader }}: {{ purchase.quantity }}
                    <br>{{ priceHeader }}: {{ purchase.price }}
                    <br>{{ totalPriceHeader }}: {{ purchase.totalPrice }}
                    
                    <br>{{ clientHeader }}: {{ purchase.client }}
                    <br>{{ phoneHeader }}: {{ purchase.phone }}
                    <br>{{ addressHeader }}: {{ purchase.address }}
                    <br>{{ cityHeader }}: {{ purchase.city }}
                    <br>{{ countryHeader }}: {{ purchase.country }}
                    <br>{{ postcodeHeader }}: {{ purchase.postcode }}
                    <br>{{ paymentHeader }}: {{ purchase.payment }}
                    <br>{{ deliveryHeader }}: {{ purchase.delivery }}
                    <br>{{ statusHeader }}: <span class="{{ statusClass }}">{{ purchase.status }}</span>
                    
                    {% if purchase.activeForm %}
                        {{ form.form(modelForm, formSettings, purchase.formId, formAction, purchase.id, button) }}
                    {% endif %}
                </div>
            </li>
        {% endfor %}
    </ol>
{% else %}
    <p>{{ ordersEmpty }}</p>
{% endif %}
