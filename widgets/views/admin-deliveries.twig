{{ use('yii/widgets/ActiveForm') }}

<p><strong>{{ header }}</strong></p>

<ul>
    {% for delivery in deliveries %}
        <li>
            {{nameHeader}}: {{ delivery.name }}
            <br>{{descriptionHeader}}: {{ delivery.description }}
            <br>{{priceHeader}}: {{ delivery.price }}
            <br>{{ activeHeader }}: {{ delivery.active }}
            
            {% set form=active_form_begin({'id':delivery.formId, 'enableAjaxValidation':delivery.ajaxValidation, 'validateOnSubmit':delivery.validateOnSubmit, 'validateOnChange':delivery.validateOnChange, 'validateOnBlur':delivery.validateOnBlur, 'validateOnType':delivery.validateOnType, 'action':delivery.formAction, 'method':'POST'}) %}
                {{ form.field(delivery.modelForm, 'id').hiddenInput().label(false) | raw }}
                <input type="submit" value="{{ delivery.button }}">
            {{ active_form_end() }}
        </li>
    {% endfor %}
</ul>

