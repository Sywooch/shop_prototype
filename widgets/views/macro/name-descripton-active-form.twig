{% macro form(modelForm, formSettings, formId, formAction, cols, rows, button) %}
    {% set form=active_form_begin({'id':formId, 'enableAjaxValidation':formSettings.ajaxValidation, 'validateOnSubmit':formSettings.validateOnSubmit, 'validateOnChange':formSettings.validateOnChange, 'validateOnBlur':formSettings.validateOnBlur, 'validateOnType':formSettings.validateOnType, 'action':formAction, 'method':'POST'}) %}
        {{ form.field(modelForm, 'name') | raw }}
        {{ form.field(modelForm, 'description').textarea({'cols':cols, 'rows':rows}) | raw }}
        {{ form.field(modelForm, 'active').checkbox() | raw }}
        <input type="submit" value="{{ button }}">
    {{ active_form_end() }}
{% endmacro %}
