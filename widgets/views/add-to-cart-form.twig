{{ use('yii/widgets/ActiveForm') }}

{% set form=active_form_begin({'id':'add-to-cart-form', 'action':url.to({0:'/cart/set'}), 'method':'POST'}) %}
    {{ form.field(purchase, 'quantity').input('number', {'step':1, 'min':1}) | raw }}
    {{ form.field(purchase, 'id_color').dropDownList(colors) | raw }}
    {{ form.field(purchase, 'id_size').dropDownList(sizes) | raw }}
    {{ form.field(purchase, 'id_product').hiddenInput({'value':product.id}).label(false) | raw }}
    {{ form.field(purchase, 'price').hiddenInput({'value':product.price}).label(false) | raw }}
    <input type="submit" value="{{ yii.t('base', 'Add to cart') }}">
{{ active_form_end() }}
