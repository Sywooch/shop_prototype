{{ use('yii/widgets/ActiveForm') }}

<div id="login-form">
    <h1>{{ header }}</h1>

    {% set form=active_form_begin({'id':formId, 'enableAjaxValidation':ajaxValidation, 'validateOnSubmit':validateOnSubmit, 'validateOnChange':validateOnChange, 'validateOnBlur':validateOnBlur, 'validateOnType':validateOnType, 'action':formAction, 'method':'POST'}) %}
        {{ form.field(formModel, 'email').textInput({'placeholder':placeholderEmail}).label(false) | raw }}
        {{ form.field(formModel, 'password').passwordInput({'placeholder':placeholderPassw}).label(false) | raw }}
        <input type="submit" value="{{ button }}">
    {{ active_form_end() }}
    
    <div class="recovery"><a href="{{ recoveryHref }}" class="gray">{{ recoveryText }}</a></div>
</div>
